{
  "$schema": "http://json.schemastore.org/template",
  "author": "Episerver AB",
  "sourceName": "Cms.Empty",
  "classifications": [ "Web" ],
  "identity": "EPiServer.Templates.Cms.Empty",
  "name": "Optimizely CMS empty",
  "shortName": "epi-cms-empty",
  "description": "Empty web application with Optimizely CMS",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sources": [
    {
      "modifiers": [
        {
          "condition": "(!enablelDocker)",
          "exclude": [
            "Directory.Build.props",
            "docker-compose.yml",
            "Docker/**/*"
          ]
        }
      ]
    }
  ],
  "symbols": {
    "authentication": {
      "type": "parameter",
      "datatype": "choice",
      "choices": [
        {
          "choice": "Local",
          "description": "Local accounts using ASP.NET Identity"
        },
        {
          "choice": "External",
          "description": "External OpenID Connect provider"
        }
      ],
      "defaultValue": "Local",
      "description": "The type of authentication to use"
    },
    "localAuthentication": {
      "type": "computed",
      "value": "(authentication == \"Local\")"
    },
    "externalAuthentication": {
      "type": "computed",
      "value": "(authentication == \"External\")"
    },
    "enableREST": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Add REST APIs for Content Delivery and Definitions"
    },
    "enableRESTWithLocalAuthentication": {
      "type": "computed",
      "value": "(enableREST && localAuthentication)"
    },
    "enableRESTWithExternalAuthentication": {
      "type": "computed",
      "value": "(enableREST && externalAuthentication)"
    },
    "enablelDocker": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "displayName": "Enable Docker support",
      "description": "Enable Docker support"
    },
    "saPassword": {
      "type": "parameter",
      "datatype": "string",
      "defaultValue": "Qwerty12345!",
      "displayName": "Password SA database account",
      "description": "The password the SA database account should have",
      "replaces": "Qwerty12345!"
    }
  }
}
